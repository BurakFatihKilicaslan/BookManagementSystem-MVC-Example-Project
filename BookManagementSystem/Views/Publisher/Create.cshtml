@model VMPublisherCreate

@if (ViewBag.Info is not null)
{
	<h3 class="text-center text-danger">@ViewBag.Info</h3>
}

<form method="post" asp-action="Create" asp-controller="Publisher">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div>
		<label>Publisher Name:</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="@Model.Name" style="color:darkred" />
	</div>
	<div>
		<label>Address:</label>
		<input asp-for="Address" class="form-control" />
		<span asp-validation-for="@Model.Address" style="color:darkred" />
	</div>
	<div>
		<label>Phone:</label>
		<input asp-for="Phone" class="form-control" />
		<span asp-validation-for="@Model.Phone" style="color:darkred" />
	</div>
	<div>
		<label>Foundation Date:</label>
		<input asp-for="FoundationDate" class="form-control" />
		<span asp-validation-for="@Model.FoundationDate" style="color:darkred" />
	</div>
	<br />
	<div class="text-center">
		<button type="submit" class="btn btn-outline-primary">Add Publisher</button>
	</div>
</form>


@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}