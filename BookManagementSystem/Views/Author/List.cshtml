@model IEnumerable<Author>

@if (TempData["Info"] is not null)
{
	<h3 class="text-center text-danger">@TempData["Info"]</h3>
}

<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th class="text-center">Name</th>
			<th class="text-center">BirtDate</th>
			<th class="text-center">Death Date</th>
			<th class="text-center">Please Select The Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.BirthDate</td>
				<td>@item.DeathDate</td>
				<td>
					<div class="d-flex justify-content-center">
						<a asp-action="Detail" asp-controller="Author" asp-route-id="@item.ID" class="btn btn-outline-primary ">View Books</a>
						<a asp-action="Update" asp-controller="Author" asp-route-id="@item.ID" class="btn btn-outline-secondary ">Update Author</a>
						<a asp-action="Delete" asp-controller="Author" asp-route-id="@item.ID" class="btn btn-outline-primary ">Delete Author</a>
					</div>
				</td>
			</tr>
		}
		<tr>
			<td colspan="4" class="text-center justify-content-center">
				<a asp-action="Create" asp-controller="Author" class="btn btn-outline-primary">Add Author</a>
				<a asp-action="Create" asp-controller="Book" class="btn btn-outline-secondary btn-block">Add Book</a>
			</td>
		</tr>
	</tbody>
</table>
