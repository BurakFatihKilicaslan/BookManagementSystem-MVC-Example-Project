@model Author

@if (TempData["InfoDeleted"] is not null)
{
    <h3 class="text-center text-danger">@TempData["InfoDeleted"]</h3>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-center">Name</th>
            <th class="text-center">BirthDate</th>
            <th class="text-center">DeathDate</th>
            <th class="text-center">Please Select The Action</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.BirthDate</td>
            <td>@Model.DeathDate</td>
            <td class="text-center">
                <form method="post" asp-action="Delete2" asp-controller="Author">
                    <input type="hidden" asp-for="ID" />
                    <button type="submit" class="btn btn-outline-primary">Delete Author</button>
                </form>
            </td>
        </tr>
    </tbody>
</table>

