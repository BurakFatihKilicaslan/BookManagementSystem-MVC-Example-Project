@model Category

@if (ViewBag.Info is not null)
{
	<h3 class="text-center text-danger">@ViewBag.Info</h3>
}

<form method="post" asp-action="Update" asp-controller="Category">
	<input type="hidden" asp-for="ID" />
	<div>
		<label>Category Name:</label>
		<input asp-for="Name" class="form-control" placeholder="@Model.Name" />
		<span asp-validation-for="Name" style="color:darkred" />
	</div>
	<div>
		<label>Description:</label>
		<input asp-for="Description" class="form-control" placeholder="@Model.Description" />
		<span asp-validation-for="Description" style="color:darkred" />
	</div>
	<br />
	<div class="text-center justify-content-center">
		<button type="submit" class="btn btn-outline-primary">Update</button>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}
