@model Category

@if (TempData["InfoDeleted"] is not null)
{
    <h3 class="text-center text-danger">@TempData["InfoDeleted"]</h3>
}

<table class="table table-bordered">
    <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Description</th>
        <th class="text-lg-center">Please Select The Action</th>
    </tr>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Description</td>
        <td class="text-center">
            <form method="post" asp-action="Delete2" asp-controller="Category">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-outline-primary">Delete Category</button>
            </form>
        </td>
    </tr>
</table>

